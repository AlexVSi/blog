{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    // "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    // "resolveJsonModule": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "./build",
    "strict": true,
    "baseUrl": "./src"
  },
  "include": ["src", "**.*.ts", "env.d.ts"],
  "exclude": [
    "node_modules",
    "build",
  ],
  "experimentalDecorators": true,
  "skipLibCheck": true,
  "forceConsistentCasingInFileNames": true
}
{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "./build",
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "#*": ["src/*"]
    }
  },
  "include": ["src", "**.*.ts"],
  "exclude": [
    "node_modules",
    "build",
  ],
}